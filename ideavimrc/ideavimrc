set surround
set highlightedyank

set number
set incsearch hlsearch
set ignorecase smartcase
set clipboard+=unnamed
set scrolloff=15
set showmode

let g:highlightedyank_highlight_color = "rgba(118, 246, 33, 0.73)"

let mapleader='-'

nnoremap <Esc> :nohlsearch<CR>

nnoremap <tab> <c-w>w
nnoremap <c-h> <c-w><c-h>
nnoremap <c-l> <c-w><c-l>
nnoremap <c-j> <c-w><c-j>
nnoremap <c-k> <c-w><c-k>

nnoremap Y y$
nnoremap Q @q

nnoremap <leader>i :action QuickImplementations<cr>
nnoremap <leader>I :action GotoImplementation<cr>

nnoremap <leader>u :action FindUsages<cr>
nnoremap <leader>U :action ShowUsages<cr>

nnoremap <leader>l :action OptimizeImports<cr>
nnoremap <leader>B :action Annotate<cr>

nnoremap <leader>gq :action Vcs.QuickListPopupAction<CR>
nnoremap <leader>gw :action GotoDeclaration<cr>

nnoremap <leader>re :action RenameElement<cr>
nnoremap <leader>rf :action RenameFile<cr>

nnoremap ]e :action GotoNextError<cr>
nnoremap [e :action GotoPreviousError<cr>

nnoremap <space> zz
